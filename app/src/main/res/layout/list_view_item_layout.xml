<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="@null">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/book_info_textview_name"
                style="@style/TextStyle_title_golden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雪中悍刀行"/>
            <LinearLayout
                android:id="@+id/three_images"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/news_image_url1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/news_image_url2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/news_image_url3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <TextView
                android:id="@+id/book_info_textview_author"
                style="@style/TextStyle_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者:烽火戏诸侯"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/book_info_image_url"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
